{% extends '_global.twig' %}

{% block title %}{{ parent() }} :: Gallery{% endblock %}

{% block body %}
<div id="message" class="message hidden">
	<div id="message_closebutton" class="closebutton"></div>
	<div id="message_content"></div>
	<div id="message_refresh_button" class="hidden">
		<br>
		<a href="javascript: refresh();">Refresh</a>
	</div>
</div>
<main id="gallery">
</main>
<footer>
	<a href="javascript: window.scroll(0, 0);">Top</a> ~ Total: <span id="gallery_total">0</span> ~ Displayed: <span id="gallery_displayed">0</span> ~ <a href="javascript: gallery_load_more();">Load More</a>
</footer>
<script>
var baseroute = '{{ baseroute }}';
var api = '{{ api }}';
var token = '{{ token }}';
var show_extension = {{ config['link']['show_extension'] ? 'true' : 'false' }};
var deletion_confirmation = {{ config['ui']['deletion_confirmation'] ? 'true' : 'false' }};
var message_timeout = {{ config['ui']['message_timeout'] }};
var gallery_limit = {{ config['ui']['gallery_items'] }};
</script>
{% endblock %}
